<tool id="stanford_corenlp_4.5.7" name="Stanford CoreNLP Annotators" version="0.1.0+galaxy0" python_template_version="3.5" profile="21.05">
    <requirements>
		<requirement type="binary">java</requirement>    
    </requirements>
    <command detect_errors="exit_code"><![CDATA[
    java -cp corenlp-4.5.7.jar -annotators tokenize,ssplit --outputFormat xml -file $input && mv ${input}.xml $outputFile
    ]]></command>
