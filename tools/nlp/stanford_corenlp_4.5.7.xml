	    	<param name="ner" type="boolean" label="Named entities"/>
	    	<param name="depparse" type="boolean" label="Dependency parser"/>
	    	<param name="coref" type="boolean" label="Coreference"/>
	    </section>
    	<param name="outputFormat" type="select" label="Output format">  
